import java.sql.Connection;
import java.sql.Date;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class User {

    // ... (other member variables)

    // Constructor and getters/setters for other member variables

    @Override
    public void insertUser(Connection conn) {
        try {
            // Create the PreparedStatement for inserting a new user
            PreparedStatement pst = conn.prepareStatement("INSERT INTO USER " +
                    "(USER_ID, USERNAME, MOBILE_NUMBER, PASSWORD, FIRST_NAME, LAST_NAME, EMAIL) " +
                    "VALUES (?,?,?,?,?,?,?)", Statement.RETURN_GENERATED_KEYS);

            // Set the specific values for the PreparedStatement
            pst.setInt(1, getUserId());
            pst.setString(2, getUsername());
            pst.setString(3, getMobileNumber());
            pst.setString(4, getPassword());
            pst.setString(5, getFirstName());
            pst.setString(6, getLastName());
            pst.setString(7, getEmail());

            try (ResultSet generatedKeys = pst.getGeneratedKeys()) {
                if (generatedKeys.next()) {
                    int userId = generatedKeys.getInt(1);
                    setUserId(userId);
                }
            } catch (SQLException e) {
                e.printStackTrace();
            }

            System.out.println("PreparedStatement is created: " + pst);

            // Execute the statement to insert the user
            int rows = pst.executeUpdate();

            System.out.println("Rows created: " + rows);
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }
}
